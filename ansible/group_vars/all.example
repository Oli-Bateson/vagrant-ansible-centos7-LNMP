---
# Username
username: vagrant

# Custom bash
bash:
  - alias hi="echo 'Hi'"

# Custom bash if PHP8.1
bashphp81:
  - alias phpxdebugoff="sudo mv /etc/opt/remi/php81/php.d/xdebugconf.ini /etc/opt/remi/php81/php.d/xdebugconf.ini.bak;sudo mv /etc/opt/remi/php81/php.d/15-xdebug.ini /etc/opt/remi/php81/php.d/15-xdebug.ini.bak;sudo service php81-php-fpm restart;php -v"
  - alias phpxdebugon="sudo mv /etc/opt/remi/php81/php.d/xdebugconf.ini.bak /etc/opt/remi/php81/php.d/xdebugconf.ini;sudo mv /etc/opt/remi/php81/php.d/15-xdebug.ini.bak /etc/opt/remi/php81/php.d/15-xdebug.ini;sudo service php81-php-fpm restart;php -v"

# You shouldn't need to change this.
mysql_port: 3306

# MySQL Root Username
mysql_root_db_user: dbuser

# MySQL Root Pass
mysql_root_db_pass: 'u.7mXTFfu3w.cYwwC_HZy6aF'

# custom my.cnf settings
#mysqld:
#  - setting: 'group_concat_max_len'
#    value: 1024
#mysqld_safe:
#  - setting: 'group_concat_max_len'
#    value: 1024
#client:
